<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.sapientia.ms.sapinews">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:screenOrientation="portrait">
        <activity
            android:name=".javaActivities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".javaActivities.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".javaActivities.SignUpActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".javaActivities.MainScreenActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait" />
        android:label="@string/title_activity_main2" />
        <activity android:name=".javaActivities.MyAdvertisementsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".javaActivities.AdvertisementDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".javaActivities.MyAdvertisementDetailActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>